<!DOCTYPE html>
<html>
  <head>
    <title>BBQed</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div class="wrapper">
      <header class="navigation">
        <% if logged_in? %>
          <%= link_to "Log Out", '/logout'%>&nbsp|&nbsp
          <%= link_to "Your Homepage", user_path(current_user)%>&nbsp|&nbsp
          <%= link_to "View All Recipes", recipes_path%>
        <% end %>
        
      </header>


        <%= yield %>



      <footer class="branding">
        <small>&copy; 2019 <strong>BBQed</strong></small>
      </footer>
    </div>
  </body>
</html>
