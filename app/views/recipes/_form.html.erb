
<%= form_for @recipe do |f| %>

  <%= f.hidden_field :user_id %>

  <%= f.fields_for :food do |food| %>
    <%= food.label :animal %>
    <%= food.text_field :animal, list: "animals" %>
    <datalist id="animals">
      <% unique_animals.each do |animal| %>
        <option value="<%= animal %>">
      <% end %>
    </datalist><br>

    <%= food.label :cut %>
    <%= food.text_field :cut, list: "cuts" %>
    <datalist id="cuts">
      <% unique_cuts.each do |cut| %>
        <option value="<%= cut %>">
      <% end %>
    </datalist><br>

  <% end %>

  <%= f.label :food_amount %>
  <%= f.number_field :food_amount %><br>

  <%= f.label :food_unit %>
  <%= f.text_field :food_unit %><br>

  <%= f.label :rub %>
  <%= f.text_field :rub %><br>

  <%= f.fields_for :smoker do |smoker| %>
    <%= smoker.label "Smoker Name" %>
    <%= smoker.text_field :name, list: "names" %>
    <datalist id="names">
      <% Smoker.all.each do |s| %>
        <option value="<%= s.name %>">
      <% end %>
    </datalist><br>

    <%= smoker.label :smoker_type %>
    <%= smoker.collection_select :smoker_type, Smoker.all, :smoker_type, :smoker_type %><br>
  <% end %>

  <%= f.label :wood %>
  <%= f.text_field :wood %><br>

  <%= f.label :time %>
  <%= f.number_field :time %><br>

  <%= f.label :temp %>
  <%= f.number_field :temp %><br>

  <%= f.label :wrap %>
  <%= f.text_field :wrap %><br>

  <%= f.label :result %>
  <%= f.text_area :result %><br>

  <%= f.submit %>
<% end %>
