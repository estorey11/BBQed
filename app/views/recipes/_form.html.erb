
<%= form_for @recipe do |f| %>

  <%= f.fields_for :food do |food| %>
    <%= food.label :animal %>
    <%= food.text_field :animal %><br>

    <%= food.label :cut %>
    <%= food.text_field :cut %><br>
  <% end %>

  <%= f.label :food_amount %>
  <%= f.text_field :food_amount %><br>

  <%= f.label :food_unit %>
  <%= f.text_field :food_unit %><br>

  <%= f.label :rub %>
  <%= f.text_field :rub %><br>

  <%= f.fields_for :smoker do |smoker| %>
    <%= smoker.label :name %>
    <%= smoker.text_field :name %><br>

    <%= smoker.label :type %>
    <%= smoker.text_field :type %><br>
  <% end %>

  <%= f.label :wood %>
  <%= f.text_field :wood %><br>

  <%= f.label :time %>
  <%= f.text_field :time %><br>

  <%= f.label :temp %>
  <%= f.text_field :temp %><br>

  <%= f.label :wrap %>
  <%= f.text_field :wrap %><br>

  <%= f.label :result %>
  <%= f.text_area :result %><br>

  <%= f.submit %>
<% end %>
